---
import valuesData from '../../data/values.json';
const { values } = valuesData;
---

<section class="w-full px-4 md:px-12 py-16 bg-primary">
    <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-nike-bold text-secondary mb-4">Nuestos Valores</h2>
            <p class="text-lg text-white max-w-2xl mx-auto">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. A adipisci doloremque in debitis, placeat minus.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {values.map((value) => (
                <div class="bg-gray-900 p-6 rounded-lg hover:bg-gray-800 transition-colors group">
                    <div class="text-3xl mb-3">{value.icon}</div>
                    <h3 class="text-xl font-nike-bold text-secondary mb-3 group-hover:text-secondary transition-colors">
                        {value.title}
                    </h3>
                    <p class="text-gray-300 leading-relaxed text-sm">
                        {value.description}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>
