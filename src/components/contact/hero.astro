<section class="w-full h-[600px] mt-20 flex flex-col relative overflow-hidden">
    <div class="truncate overflow-x-hidden h-full w-full relative">
        <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-primary/60 z-10"></div>
        <img src="https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?q=80&w=1172&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Nike Contact Hero" class="w-full h-full object-cover"/>
    </div>

    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-20 flex flex-col justify-center items-center gap-4 text-center">
        <div class="overflow-hidden">
            <span class="text-2xl font-nike-medium text-white block animate-fade-in-up" style="animation-delay: 0.2s; opacity: 0; animation-fill-mode: forwards;">Contáctanos</span>
        </div>
        <div class="overflow-hidden">
            <h1 class="text-6xl font-bold text-secondary block animate-fade-in-up" style="animation-delay: 0.5s; opacity: 0; animation-fill-mode: forwards;">Habla con nosotros</h1>
        </div>
        <div class="overflow-hidden max-w-xl">
            <p class="text-lg text-white animate-fade-in-up" style="animation-delay: 0.8s; opacity: 0; animation-fill-mode: forwards;">
                Lorem ipsum dolor sit amet consectetur, adipisicing elit. Vero, aperiam!
            </p>
        </div>
        <div class="overflow-hidden">
            <button class="mt-4 bg-secondary text-primary px-8 py-3 rounded-full font-nike-medium hover:bg-opacity-90 transition-all duration-300 animate-fade-in-up" style="animation-delay: 1.1s; opacity: 0; animation-fill-mode: forwards;">
                Iniciar conversación
            </button>
        </div>
    </div>
</section>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out;
    }
</style>
