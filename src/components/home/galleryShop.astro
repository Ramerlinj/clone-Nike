---
import gallery from '../../data/gallery.json'
---

<section class="w-full px-4 md:px-32 my-22">
    <h2 class="text-3xl m-4">{gallery.TITLE}</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
        {gallery.imagesShop.map((player) => (
            <div class="w-full h-[700px] bg-gray-200 rounded-lg overflow-hidden shadow-lg">
                <img loading="lazy" src={player.src} alt={player.alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"/>
            </div>
            
        ))}

{
    gallery.imagesShop.map((player) => (
        <span class="text-2xl m-2">{player.proffesion}</span>
            ))}
    </div>
